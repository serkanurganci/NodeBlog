<!--==========================
    INSIDE HERO SECTION Section
============================-->
<section class="page-image page-image-user md-padding">
    <h1 class="text-white text-center">Üye Ol</h1>
</section>

<!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
    <div class="container">

        <div class="row text-center">
            <div class="col-md-4 offset-md-4">
                <div class="section-header">
                    <h2 class="title">Üye Ol</h2>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <form action="/users/register" method="POST" id="registerForm" name="sentRegister" novalidate="novalidate">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <input class="form-control" name="username" type="text" placeholder="Kullanıcı Adı *"
                                    required="required" data-validation-required-message="Lütfen kullanıcı adınızı giriniz.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="email" type="email" placeholder="Email *"
                                    required="required" data-validation-required-message="Lütfen email adresinizi giriniz.">
                                <p class="help-block text-danger"></p>
                            </div>
                            <div class="form-group">
                                <input class="form-control" name="password" type="password" placeholder="Şifre *"
                                    required="required"
                                    data-validation-required-message="Lütfen şifrenizi giriniz.">
                                <p class="help-block text-danger"></p>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="col-lg-12 text-center">
                            <div id="success"></div>
                            <button id="sendLoginButton" class="main-btn" type="submit">Üye ol</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>